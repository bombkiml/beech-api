const data = [
  { "id": 1, "name": "Oggy" },
  { "id": 2, "name": "Jack" },
  { "id": 3, "name": "The Cockroaches Gang" }
];

module.exports = {

  // Example basic function get constant data
  getData() {
    return data;
  },

  // Example basic function get data from MySQL (must be return promise)
  getFruits() {
    return new Promise((resolve, reject) => {
      try {
        // call mysql `default_db` connection
        mysql.default_db.query("SELECT * FROM fruits", (err, results) => {
          if (err) { reject(err) }
          resolve(results);
        });
      } catch (error) {
        reject(error);
      }
    });
  }

}